{
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": [1, 2],
      "no-underscore-dangle": 1,
      "no-mixed-spaces-and-tabs": 1,
      "no-var": 2,
      "no-trailing-spaces": 1,
      "semi": [1, "always"],
      "quotes": [1, "single"]
    }
  }
  